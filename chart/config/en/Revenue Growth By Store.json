{
    "reply": [
        {
            "type": "bar",
            "data": {
                "labels": [<#list data['items'] as item>"${item['store name']!""}"<#sep>,</#list>],
                "datasets": [{
                    "label": "Revenue Growth (July 2019 vs July 2018)",
                    "data": [<#list data['items'] as item>${item.growth!"0"}<#sep>,</#list>],
                    "backgroundColor": "rgba(255, 99, 132, 0.2)",
                    "borderColor": "rgba(255, 99, 132, 1)",
                    "borderWidth": 1
                }
                ]
            },
            "options": {
                "scales": {
                    "yAxes": [{
                        "ticks": {
                            "beginAtZero": true
                        }
                    }]
                }
            }
        },
        {
            "type": "text",
            "prompt": "Admiralty store has the highest revenue growth in June.",
            "data": {
                "text": []
            }
        }
    ],
    "context": {
        "topGrowthStore": "${data['items'][0]['store name']}"
    },    
    "event": "awardBonus"
}